<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.example.loylogic.hackathon.ShareFeedbackFragment">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select the department for which you would \nlike to share your feedback and earn"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#CB0F39"
        android:text="Reward points"
        android:textSize="16sp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#E6E4F1"
        android:gravity="center"
        android:text="Earn 200 points for your first feedback!"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_margin="20dp"
        android:id="@+id/departmentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:scrollbars="horizontal" />

</LinearLayout>



</FrameLayout>
